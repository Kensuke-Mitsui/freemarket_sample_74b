.creditcard
  .title
    クレジットカード情報入力
  %section.information
  = form_tag('/creditcard', method: :post, action: "create", id: 'charge-form', name: "inputForm") do
    .information__number
      %label.information__number--title カード番号
      %span.information__number--required 必須
      = text_field_tag "number", "", class: "input__default", placeholder: "半角数字のみ", maxlength: "16", type: "text", id: "card_number"
      =image_tag "material/credit/creditcard-company.png"
    .creditcard__limit
      .creditcard__limit--title
        有効期限
      .creditcard__limit--required
        必須
    .creditcard__limit--input
      %select.month 
        %option{value:"1月"} 1
        %option{value:"2月"} 2
        %option{value:"3月"} 3
        %option{value:"4月"} 4
        %option{value:"5月"} 5
        %option{value:"6月"} 6
        %option{value:"7月"} 7
        %option{value:"8月"} 8
        %option{value:"9月"} 9
        %option{value:"10月"} 10
        %option{value:"11月"} 11
        %option{value:"12月"} 12
      .creditcard__limit--input-month
        月
      %select.year
        %option{value: "2019"}19
        %option{value: "2020"}20
        %option{value: "2021"}21
        %option{value: "2022"}22
        %option{value: "2023"}23
        %option{value: "2024"}24
        %option{value: "2025"}25
        %option{value: "2026"}26
        %option{value: "2027"}27
        %option{value: "2028"}28
        %option{value: "2029"}29
      .creditcard__limit--input-day
        年
    .security
      .security__title
        セキュリティコード
      .security__required
        必須
    %form
      = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
    %a.card__explanation{href: "#"} カード裏面の番号とは？
    #card_token
      = submit_tag "追加する", id: "token_submit", class: "top__margin"
